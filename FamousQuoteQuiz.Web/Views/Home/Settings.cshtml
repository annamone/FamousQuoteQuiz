@using FamousQuoteQuiz.Domain.Enums
@{
    ViewData["Title"] = "Settings";
    var currentMode = (GameMode)(ViewBag.GameMode ?? GameMode.Binary);
}

<div class="py-5">
    <h1 class="mb-4">Settings</h1>
    <p class="text-muted">Choose how you want to play the Famous Quote Quiz.</p>

    <form method="post" asp-action="Settings" class="card shadow-sm" style="max-width: 28rem;">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-bold">Quiz mode</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="mode" id="modeBinary" value="@((int)GameMode.Binary)" @(currentMode == GameMode.Binary ? "checked" : "")>
                    <label class="form-check-label" for="modeBinary">
                        <strong>Binary (Yes/No)</strong> – One author name is shown; answer Yes or No if they are the author. (Default)
                    </label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="mode" id="modeMultiple" value="@((int)GameMode.MultipleChoice)" @(currentMode == GameMode.MultipleChoice ? "checked" : "")>
                    <label class="form-check-label" for="modeMultiple">
                        <strong>Multiple choice</strong> – Three possible authors; pick the correct one.
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

